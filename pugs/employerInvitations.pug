doctype html
html(lang="en")
head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
    script(src="../js_part/scripts.js")
    script(src="../js_part/changePage.js")
    link(rel="stylesheet" href="../styles/css/index.css")
    title Employer invitations
body
    include ./includes/headerLogged.pug
    include ./mixins/searchButton.pug 
    include ./mixins/employerInvitation.pug 
    main 
        .profile__container 
            .profile__select
                select.distance(name="distance", onchange="changePage(this.value)")
                    option(value='myProfile') My profile
                    option(value="applicationsProfile") Applications
                    option(value="recommendedRoles") Recommended Roles
                    option(value="employerInvitations", selected) Employer Invitations
                    option(value="savedRoles") Saved Roles
        .employer__invitations__content
            .employer__invitations__container
                .employer__invitations__header 
                    h4 Employer invitations
                .employer__invitations__cards
                    -const first_data={position: "Lead Manager", salary: "£50,000-£60,000", img: "../assets/images/applicationsProfile/tesla.jpg", company: "Tesla"}
                    .employer__invitations__card
                        +employerInvitation(first_data)
                    -const second_data={position: "Lead Manager", salary: "£50,000-£60,000", img: "../assets/images/applicationsProfile/tesla.jpg", company: "Tesla"}
                    .employer__invitations__card
                        +employerInvitation(second_data)
    include ./includes/footer.pug