mixin jobCard(data)
    .job__card.job__card_mobile(onclick="changePage('jobDetails')")  
        .job__container
            .job__card_header 
                img(src="../../../dist/assets/images/searchResults/Vector (3).svg", alt="job_card_img")
                h4 #{data.job} 
                .job__card_header__details 
                    span #{data.short} 
                    span(class="job__card_header__details__company") #{data.company}
            .job__card__details 
                .salary #{data.salary} 
                .time #{data.time} 
                .location #{data.location} 
            .job__card__description #{data.description}

            if data.similarJobs 
                .similar__jobs__extra__info See More 
            
            if data.recommended_roles 
                .recommended__roles__extra__info See More 

    .job__card.job__card_desktop(onclick="changePage('jobDetails')")  
        .job__container
            .job__card_header 
                .job__card_header__details_all
                    h4 #{data.job} 
                    .job__card_header__details 
                        span #{data.short} 
                        span(class="job__card_header__details__company") #{data.company}
                .job__card_header__img
                    img(src="../../../dist/assets/images/searchResults/tesla.jpg", alt="job_card_img")
            .job__card__details 
                .salary #{data.salary} 
                .time #{data.time} 
                .location #{data.location} 
            .job__card__description #{data.description}

            .job__card__extra__end
                .job__card__extra__end__text
                    | See more...
                .job__card__extra__end__content
                    .job__card__extra__end__content__img    
                        img(src="../../../dist/assets/images/searchResults/Vector (3).svg", alt="job_card_img")
                    span Login to save vacancies
            if data.similarJobs 
                .similar__jobs__extra__info See More 
            
            if data.recommended_roles 
                .recommended__roles__extra__info See More 